package blog.models {
	
	import java.util.List
	import java.util.Date
	
	entity User {
		email : String
		password : String
		fullname : String
		isAdmin : Boolean
	}
	
	entity Tag {
		name : String
	}
	
	entity Comment {
		author : String
		postedAt : Date
		content : String
		post : Post <- Post.comments
	}
	
	entity Post {
		title : String
		postedAt : Date
		content : String
		author : User
		comments : List<Comment> -> Comment.post
		tags : List<Tag>
	}
}